extends ../layouts/content
include ../mixins/form
append head
  title Profile
  link(rel="stylesheet", href="/styles/profile.scss")

block content
  .profile
    .profile__user
      img.profile__image(src="../../static/images/no-image.jpeg", alt="User avatar")
      h2.profile__name John
    ul.profile__info
      each value, key in {Email: 'mail@gmail.com', Login: 'johnDoe', Name: 'John', Surname: 'Doe', Nickname: 'LinuxFanboy', Number:'8-800-555-35-35'}
        li.profile__info-row
          p=key
          p=value
    ul.profile__links
      each value, key in {'/': 'Change profile info', '/': 'Change password', '/': 'Logout'}
        li.profile__sign-out-link
          a(href=key)=value