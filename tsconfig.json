{
	"compilerOptions": {
		"outDir": "dist",
		"target": "es2017",
		"declaration": false,
		"module": "commonjs",
		"strictNullChecks": true,
		"sourceMap": true,
		"baseUrl": ".",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
	},
    "exclude": ["node_modules"],
    "include": ["src/**/*", ".d.ts"]
}